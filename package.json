{
  "name": "zar-browser",
  "version": "1.0.0",
  "description": "A simple lightweight browser that is easy to use",
  "main": "src/main.js",
  "author": "ZarScape",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win --mac --linux"
  },
  "build": {
    "appId": "com.zarscape.browser",
    "productName": "Zar Browser",
    "directories": {
      "buildResources": "src/assets/images",
      "output": "dist"
    },
    "win": {
      "icon": "src/assets/images/logo.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "src/assets/images/logo.ico",
      "target": "dmg"
    },
    "linux": {
      "icon": "src/assets/images/logo.ico",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "src/assets/images/logo.ico",
      "uninstallerIcon": "src/assets/images/logo.ico",
      "installerHeader": "src/assets/images/bg.bmp",
      "installerSidebar": "src/assets/images/bg.bmp"
    },
    "asar": true,
    "files": [
      "src/**"
    ],
    "extraMetadata": {
      "version": "1.0.0"
    }
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  }
}
